{
  "name": "home-assistant-desktop",
  "productName": "Home Assistant Desktop App",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "main": "src/electron-main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "tauri": "tauri"
  },
  "build": {
    "appId": "com.zowie.homeassistant.desktop",
    "productName": "Home Assistant Desktop App",
    "icon": "Home Assistant Build.ico",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "Home Assistant Build.ico",
      "artifactName": "Home Assistant Desktop App Setup ${version}.${ext}"
    },
    "mac": {
      "target": "dmg",
      "icon": "Home Assistant Build.ico",
      "artifactName": "Home Assistant Desktop App ${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "shortcutName": "Home Assistant Desktop App"
    }
  },
  "devDependencies": {
    "@tauri-apps/cli": "^2",
    "electron": "^40.4.1",
    "electron-builder": "^26.7.0",
    "png-to-ico": "^3.0.1",
    "sharp": "^0.34.5"
  },
  "dependencies": {
    "@tauri-apps/api": "^2.10.1",
    "@tauri-apps/plugin-autostart": "^2.5.1",
    "@tauri-apps/plugin-dialog": "^2.6.0",
    "@tauri-apps/plugin-shell": "^2.3.5",
    "@tauri-apps/plugin-store": "^2.4.2",
    "axios": "^1.13.5",
    "electron-store": "^11.0.2"
  }
}